generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  image     String?
  workflows Workflow[]
  createdAt DateTime   @default(now())
}

model Workflow {
  id            String      @id @default(cuid())
  name          String
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  nodes         Json // React Flow nodes array
  edges         Json // React Flow edges array
  active        Boolean     @default(false)
  webhookSecret String      @default(cuid()) // for webhook URL security
  executions    Execution[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Execution {
  id         String    @id @default(cuid())
  workflowId String
  workflow   Workflow  @relation(fields: [workflowId], references: [id])
  status     String // "queued" | "running" | "success" | "failed"
  input      Json // what triggered this run â€” CRITICAL for debugging
  logs       Json // per-node results array
  startedAt  DateTime  @default(now())
  endedAt    DateTime?
}
